<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
     <AbsoluteLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bgseesecond" >



        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="9dp"
            android:layout_y="58dp"
            android:text="Type :"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />




        <Spinner
            android:id="@+id/spnSalesType"
            android:layout_width="233dp"
            android:layout_height="50dp"
            android:layout_x="62dp"
            android:layout_y="44dp" />

        <Button
            android:id="@+id/btnMYSalesShow"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_x="111dp"
            android:layout_y="122dp"
            android:onClick="OnclickSalesShow"
            android:text="Show" />
        
    </AbsoluteLayout>
    

</LinearLayout>