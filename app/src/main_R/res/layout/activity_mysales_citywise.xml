<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/back_main"
    android:fillViewport="false" >

    <ScrollView
        android:id="@+id/myview"
        android:background="@drawable/bgseesecond"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent" >
            <!-- Header  Starts -->
            <!-- Header Ends -->
            <!-- Menu -->

            <AbsoluteLayout
                android:id="@+id/widget33"
                android:layout_width="fill_parent"
                android:layout_height="match_parent" >

                <ListView
                    android:id="@+id/lvCityitems"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_x="8dp"
                    android:layout_y="206dp"
                    android:cacheColorHint="#FFFFFF"
                    android:smoothScrollbar="true"
                    android:textColor="#0d6b90" >
                </ListView>

                <TextView
                    android:id="@+id/lblUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_x="86dp"
                    android:layout_y="5dp"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/btnViewSalesData"
                    android:layout_width="61dp"
                    android:layout_height="63dp"
                    android:layout_marginTop="16dp"
                    android:layout_x="236dp"
                    android:layout_y="18dp"
                    android:background="@drawable/search_icon"
                    android:onClick="onClickViewSales"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnSalesStartdate"
                    android:layout_width="wrap_content"
                    android:layout_height="59dp"
                    android:layout_x="5dp"
                    android:layout_y="10dp"
                    android:background="@drawable/startdate_icon"
                    android:onClick="onClickStartDate" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_x="139dp"
                    android:layout_y="76dp"
                    android:text="End date"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_x="18dp"
                    android:layout_y="74dp"
                    android:text="Start Date"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnSalesEnddate"
                    android:layout_width="wrap_content"
                    android:layout_height="59dp"
                    android:layout_x="124dp"
                    android:layout_y="10dp"
                    android:background="@drawable/startdate_icon"
                    android:onClick="onClickEndDate" />

                <TextView
                    android:id="@+id/lblSalesStartDate"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_x="20dp"
                    android:layout_y="98dp" />

                <TextView
                    android:id="@+id/TextView01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_x="25dp"
                    android:layout_y="117dp"
                    android:text="City"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lblSalesEndDate"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_x="138dp"
                    android:layout_y="98dp"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <Spinner
                    android:id="@+id/citySpinner1"
                    android:layout_width="210dp"
                    android:layout_height="59dp"
                    android:layout_x="92dp"
                    android:layout_y="117dp" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_x="1dp"
                    android:layout_y="179dp"
                    android:background="@android:color/darker_gray" >

                    <TextView
                        android:id="@+id/txtViewCity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="19dp"
                        android:text="City"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtViewMerchant"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="14dp"
                        android:layout_toRightOf="@+id/txtViewCity"
                        android:text="Merchant"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtViewCard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:text="Card"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtViewDenom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="22dp"
                        android:layout_toRightOf="@+id/txtViewCard"
                        android:text="Denom"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtViewQty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="19dp"
                        android:layout_toRightOf="@+id/txtViewDenom"
                        android:text="Qty"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </RelativeLayout>
            </AbsoluteLayout>

            <!-- Menu Form Ends -->

        </RelativeLayout>
    </ScrollView>

</LinearLayout>