<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:weightSum="9.5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_weight="1.5"
                android:id="@+id/card_type2"
                android:layout_gravity="start"
                android:textAlignment="viewStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Card Type"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/denom2"
                android:layout_weight="1"
                android:layout_gravity="start"
                android:textAlignment="viewStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Denom"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/bulk2"
                android:layout_width="40dp"
                android:textAlignment="viewStart"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="Bulk"
                android:layout_gravity="start"
                android:textSize="12sp" />

            <TextView
                android:layout_weight="2"
                android:layout_gravity="start"
                android:id="@+id/startserial2"
                android:textAlignment="viewStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start Serial"
                android:textSize="12sp" />

            <TextView
                android:layout_weight="2"
                android:id="@+id/endserial2"
                android:layout_gravity="start"
                android:textAlignment="viewStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="End Serial"
                android:textSize="12sp" />

            <TextView
                android:layout_weight="1"
                android:layout_gravity="start"
                android:id="@+id/numberofcards"
                android:textAlignment="viewStart"
                android:layout_width="29dp"
                android:layout_height="wrap_content"
                android:text="card count"
                android:textSize="12sp" />

        </LinearLayout>

    </RelativeLayout>


</LinearLayout>