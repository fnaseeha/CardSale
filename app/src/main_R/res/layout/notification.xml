<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/back_main"
    android:fillViewport="false" >
    
 <ScrollView
    android:id="@+id/myview"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

  <RelativeLayout
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:background="@drawable/back_main" >

        <!-- Header  Starts -->

        <LinearLayout
            android:id="@+id/header"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dip"
            android:paddingTop="5dip" >

            <!-- Logo Start -->

            <!-- Logo Ends -->
        </LinearLayout>
        <!-- Header Ends -->



 <!-- Menu -->
 <AbsoluteLayout
     android:id="@+id/widget33"
     android:layout_width="fill_parent" 
     android:layout_height="570dp">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall" />

        <ImageView
            android:layout_width="99dp"
            android:layout_height="34dp"
            android:layout_marginLeft="10dip"
            android:layout_x="-1dp"
            android:layout_y="6dp"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="165dp"
            android:layout_y="13dp"
            android:text="User Name :"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="14dp"
            android:layout_y="51dp"
            android:text="Merchant :"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/lblMerchantName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="89dp"
            android:layout_y="52dp"
            android:text="TextView"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/lblUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="246dp"
            android:layout_y="14dp"
            android:text="TextView"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:layout_x="17dp"
            android:layout_y="78dp"
            android:text="Items"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="17dp"
            android:layout_y="107dp"
            android:text="Invoice No"
            android:textColor="#FFFFFF" />

        <EditText
            android:id="@+id/etStartSerial"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_x="17dp"
            android:layout_y="132dp"
            android:ems="10"
            android:inputType="number" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="17dp"
            android:layout_y="184dp"
            android:text="Amount Received"
            android:textColor="#FFFFFF" />

        <EditText
            android:id="@+id/etNoofCards"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_x="19dp"
            android:layout_y="207dp"
            android:ems="10"
            android:inputType="number" />

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_x="17dp"
            android:layout_y="264dp"
            android:text="Proceed"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_x="172dp"
            android:layout_y="266dp"
            android:text="Save"
            android:textStyle="bold" />
    
    </AbsoluteLayout>     
      
        <!-- Menu Form Ends -->

           <!-- Footer Start -->

        <LinearLayout
            android:id="@+id/footer"
            android:layout_width="fill_parent"
            android:layout_height="90dip"
            android:layout_alignParentBottom="true"
            android:background="@layout/footer_repeat"
            android:textColor="#372c24" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The Truly Srilankan Telecomunication Company"
                android:textColor="#0d6b90" />
        </LinearLayout>
        <!-- Footer Ends -->


        
 
</RelativeLayout>
</ScrollView>

</LinearLayout>